<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="공유하기">
    </Button>
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <!-- PAGE 0 지도 -->
        <LinearLayout
            android:id="@+id/main_pages_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <SeekBar
                    android:id="@+id/seekbar_map"
                    android:layout_width="275dp"
                    android:layout_height="150dp"
                    android:translationX="-125dp"
                    android:max="12"
                    android:progress="5"
                    android:rotation="270"
                    android:layout_marginTop="125dp"
                    android:splitTrack="true"
                    android:progressDrawable="@drawable/seekbar"
                    android:thumb="@drawable/seekbar_thumb"/>

                <!--
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_button"
                    android:layout_gravity="end|bottom"
                    android:elevation="10dp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="20dp"
                    android:scaleType="centerInside"/>
                  -->
            </FrameLayout>

        </LinearLayout>

        <!-- PAGE 1 -->
        <LinearLayout
            android:id="@+id/main_pages_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="vertical"/>

        <!-- PAGE 2 -->
        <LinearLayout
            android:id="@+id/main_pages_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"/>

    </FrameLayout>


    <!-- 하단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <!-- (좌)()() -->
        <LinearLayout
            android:id="@+id/btn_moveTo_page_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_page_0_name"
                android:textColor="#fff" />
        </LinearLayout>

        <!-- ()(중)() -->
        <LinearLayout
            android:id="@+id/btn_moveTo_page_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_page_1_name"
                android:textColor="#fff" />
        </LinearLayout>

        <!-- ()()(우) -->
        <LinearLayout
            android:id="@+id/btn_moveTo_page_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_graph" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_page_2_name"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>